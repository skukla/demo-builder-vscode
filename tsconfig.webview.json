{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist/webview",
    "rootDir": "./src/webviews",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "types": ["react", "react-dom"],
    "baseUrl": ".",
    "paths": {
      "@/components": ["src/webviews/components"],
      "@/components/*": ["src/webviews/components/*"],
      "@/hooks": ["src/webviews/hooks"],
      "@/hooks/*": ["src/webviews/hooks/*"],
      "@/contexts": ["src/webviews/contexts"],
      "@/contexts/*": ["src/webviews/contexts/*"],
      "@/screens": ["src/webviews/screens"],
      "@/screens/*": ["src/webviews/screens/*"],
      "@/types": ["src/webviews/types"],
      "@/types/*": ["src/webviews/types/*"],
      "@/utils": ["src/webviews/utils"],
      "@/utils/*": ["src/webviews/utils/*"]
    }
  },
  "include": [
    "src/webviews/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}