{
  "name": "adobe-demo-builder",
  "displayName": "Adobe Demo Builder",
  "description": "Create and manage Adobe Commerce demos with ease",
  "version": "1.0.0-beta.92",
  "publisher": "skukla",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "adobe",
    "commerce",
    "demo",
    "builder"
  ],
  "icon": "media/icon.png",
  "galleryBanner": {
    "color": "#FF0000",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/skukla/demo-builder-vscode"
  },
  "author": "Steve Kukla",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": "limited",
      "description": "Demo Builder requires workspace trust to execute external commands (git, npm, Adobe CLI). In untrusted workspaces, project creation and management features are disabled for security.",
      "restrictedConfigurations": [
        "demoBuilder.defaultPort",
        "demoBuilder.autoUpdate"
      ]
    }
  },
  "contributes": {
    "commands": [
      {
        "command": "demoBuilder.createProject",
        "title": "Create Project",
        "category": "Demo Builder"
      },
      {
        "command": "demoBuilder.checkForUpdates",
        "title": "Check for Updates",
        "category": "Demo Builder"
      },
      {
        "command": "demoBuilder.resetAll",
        "title": "Reset All (Dev Only)",
        "category": "Demo Builder"
      },
      {
        "command": "demoBuilder.setRecommendedZoom",
        "title": "Set Recommended Zoom (120%)",
        "category": "Demo Builder"
      },
      {
        "command": "demoBuilder.resetZoom",
        "title": "Reset Zoom (100%)",
        "category": "Demo Builder"
      },
      {
        "command": "demoBuilder.cleanupDaLiveSites",
        "title": "Manage DA.live Sites",
        "category": "Demo Builder"
      },
      {
        "command": "demoBuilder.manageGitHubRepos",
        "title": "Manage GitHub Repositories",
        "category": "Demo Builder"
      }
    ],
    "configuration": [
      {
        "title": "General",
        "properties": {
          "demoBuilder.defaultPort": {
            "type": "number",
            "default": 3000,
            "description": "Default port for the frontend application"
          },
          "demoBuilder.autoUpdate": {
            "type": "boolean",
            "default": true,
            "description": "Automatically check for updates on startup"
          },
          "demoBuilder.autoZoom": {
            "type": "boolean",
            "default": true,
            "description": "Reset zoom to 100% on extension load for consistent demo experience"
          },
          "demoBuilder.updateChannel": {
            "type": "string",
            "enum": [
              "stable",
              "beta"
            ],
            "default": "stable",
            "description": "Update channel: stable (production releases) or beta (testing)"
          },
          "demoBuilder.logLevel": {
            "type": "string",
            "enum": [
              "error",
              "warn",
              "info",
              "debug",
              "trace"
            ],
            "default": "debug",
            "description": "Log level for Demo Builder Debug Logs channel: debug (normal) or trace (verbose with stack traces)"
          },
          "demoBuilder.projectsViewMode": {
            "type": "string",
            "enum": [
              "cards",
              "rows"
            ],
            "default": "cards",
            "description": "Default view mode for the projects list: cards (grid layout) or rows (list layout)"
          },
          "demoBuilder.cleanupBehavior": {
            "type": "string",
            "enum": [
              "ask",
              "deleteAll",
              "localOnly"
            ],
            "enumDescriptions": [
              "Show selection dialog for each deletion",
              "Automatically delete all external resources",
              "Only delete local project, skip external resources"
            ],
            "default": "ask",
            "description": "How to handle external EDS resources (GitHub repo, DA.live site) when deleting a project."
          }
        }
      },
      {
        "title": "DA.live",
        "properties": {
          "demoBuilder.daLive.defaultOrg": {
            "type": "string",
            "default": "",
            "description": "Default DA.live organization name. Auto-fills the organization field during authentication."
          },
          "demoBuilder.daLive.aemAuthorUrl": {
            "type": "string",
            "default": "author-p158081-e1683323.adobeaemcloud.com",
            "description": "AEM Author environment URL for DA.live content authoring with AEM Assets. Format: author-pXXXXX-eYYYYY.adobeaemcloud.com"
          },
          "demoBuilder.daLive.IMSOrgId": {
            "type": "string",
            "default": "demosystem",
            "description": "Adobe IMS organization ID for Universal Editor access. Used to generate editor.path for DA.live sites."
          },
          "demoBuilder.daLive.editorPathPrefix": {
            "type": "string",
            "default": "site/to/path/content",
            "description": "Dummy path prefix for editor.path that prevents Universal Editor from auto-opening. Uses a non-existent path so UE only opens via punch-out."
          }
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "demoBuilder",
          "title": "Demo Builder",
          "icon": "media/adobe-icon-dark.svg"
        }
      ]
    },
    "views": {
      "demoBuilder": [
        {
          "id": "demoBuilder.sidebar",
          "name": "Demo Builder",
          "type": "webview",
          "when": "!demoBuilder.showComponents"
        },
        {
          "id": "demoBuilder.components",
          "name": "Files",
          "type": "tree",
          "when": "demoBuilder.showComponents"
        }
      ]
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "clean:webview": "rm -rf dist/webview",
    "compile": "npm run compile:extension && npm run compile:webview && npm run copy:media",
    "compile:extension": "node esbuild.config.js --production",
    "compile:extension:dev": "node esbuild.config.js",
    "compile:typescript": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "compile:webview": "npm run clean:webview && webpack --mode production",
    "copy:media": "mkdir -p dist/media && cp -r media/* dist/media/",
    "watch": "node esbuild.config.js --watch",
    "watch:webview": "webpack --mode development --watch",
    "watch:all": "concurrently \"npm run watch\" \"npm run watch:webview\" --names \"esbuild,webpack\" --prefix-colors \"blue,green\"",
    "vscode:prepublish": "npm run compile",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "test": "node --max-old-space-size=4096 node_modules/.bin/jest --forceExit",
    "test:fast": "node --max-old-space-size=4096 node_modules/.bin/jest --maxWorkers=75% --forceExit",
    "test:changed": "node --max-old-space-size=4096 node_modules/.bin/jest --onlyChanged",
    "test:file": "node --max-old-space-size=4096 node_modules/.bin/jest --maxWorkers=1",
    "test:safe": "node --max-old-space-size=1024 node_modules/.bin/jest --maxWorkers=1 --forceExit",
    "test:no-compile": "node --max-old-space-size=4096 node_modules/.bin/jest",
    "test:watch": "node --max-old-space-size=4096 node_modules/.bin/jest --watch",
    "test:coverage": "node --max-old-space-size=4096 node_modules/.bin/jest --coverage",
    "test:force": "node --max-old-space-size=4096 node_modules/.bin/jest --forceExit",
    "test:unit": "node --max-old-space-size=4096 node_modules/.bin/jest --selectProjects node --testPathIgnorePatterns='integration'",
    "test:integration": "node --max-old-space-size=4096 node_modules/.bin/jest --testPathPattern='integration'",
    "test:ui": "node --max-old-space-size=4096 node_modules/.bin/jest --selectProjects react",
    "test:typecheck": "tsc --noEmit",
    "metrics:baseline": "node scripts/capture-baseline-metrics.js",
    "validate:jest-config": "node scripts/validate-jest-config.js",
    "validate:eslint-rules": "node scripts/validate-eslint-rules.js",
    "validate:test-guidelines": "node scripts/validate-test-guidelines.js",
    "validate:test-file-sizes": "node scripts/check-test-file-sizes.js",
    "analyze": "ANALYZE=true npm run compile:webview",
    "package": "vsce package",
    "publish": "vsce publish",
    "encrypt-keys": "node scripts/encrypt-keys.js",
    "manage-keys": "node scripts/manage-keys.js",
    "setup": "npm install && npm run compile",
    "postinstall": "npm run compile",
    "mesh:delete": "aio api-mesh delete --autoConfirmAction",
    "mesh:status": "aio api-mesh get --active",
    "hooks": "node scripts/hooks.js",
    "docs:check": "node scripts/hooks.js coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@swc/core": "^1.15.3",
    "@swc/jest": "^0.2.39",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/adm-zip": "^0.5.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/semver": "^7.5.8",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "cloc": "^2.6.0-cloc",
    "concurrently": "^9.2.1",
    "css-loader": "^7.1.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "html-webpack-plugin": "^5.6.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jscpd": "^4.0.5",
    "madge": "^8.0.0",
    "prettier": "^3.6.2",
    "process": "^0.11.10",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-prune": "^0.10.3",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.16.0",
    "webpack": "^5.101.3",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@adobe/aio-lib-console": "^5.4.2",
    "@adobe/aio-lib-ims": "^7.0.2",
    "@adobe/react-spectrum": "^3.46.0",
    "@octokit/core": "^6.1.6",
    "@octokit/plugin-retry": "^7.2.1",
    "@types/uuid": "^10.0.0",
    "adm-zip": "^0.5.16",
    "async-mutex": "^0.5.0",
    "axios": "^1.6.0",
    "crypto-js": "^4.2.0",
    "execa": "^5.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "semver": "^7.5.4",
    "uuid": "^13.0.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "yaml": "^2.3.4"
  }
}
