{
  "name": "adobe-demo-builder",
  "displayName": "Adobe Demo Builder",
  "description": "Create and manage Adobe Commerce demos with ease",
  "version": "1.0.0-beta.14",
  "publisher": "adobe-demo-team",
  "author": "Steve Kukla",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "adobe",
    "commerce",
    "demo",
    "builder"
  ],
  "icon": "media/icon.png",
  "galleryBanner": {
    "color": "#FF0000",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/skukla/demo-builder-vscode"
  },
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:.demo-builder"
  ],
  "main": "./dist/extension.js",
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": "limited",
      "description": "Demo Builder requires workspace trust to execute external commands (git, npm, Adobe CLI). In untrusted workspaces, project creation and management features are disabled for security.",
      "restrictedConfigurations": [
        "demoBuilder.defaultPort",
        "demoBuilder.autoUpdate"
      ]
    }
  },
  "contributes": {
    "commands": [
      {
        "command": "demoBuilder.createProject",
        "title": "Create Project",
        "category": "Demo Builder"
      },
      {
        "command": "demoBuilder.checkForUpdates",
        "title": "Check for Updates",
        "category": "Demo Builder"
      },
      {
        "command": "demoBuilder.resetAll",
        "title": "Reset All (Dev Only)",
        "category": "Demo Builder"
      }
    ],
    "configuration": {
      "title": "Demo Builder",
      "properties": {
        "demoBuilder.defaultPort": {
          "type": "number",
          "default": 3000,
          "description": "Default port for the frontend application"
        },
        "demoBuilder.autoUpdate": {
          "type": "boolean",
          "default": true,
          "description": "Automatically check for updates on startup"
        },
        "demoBuilder.updateChannel": {
          "type": "string",
          "enum": [
            "stable",
            "beta"
          ],
          "default": "stable",
          "description": "Update channel: stable (production releases) or beta (testing)"
        },
        "demoBuilder.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show Demo Builder status in the status bar"
        },
        "demoBuilder.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "warn",
            "info",
            "debug"
          ],
          "default": "info",
          "description": "Log level for Demo Builder output"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "demoBuilder",
          "title": "Demo Builder",
          "icon": "media/adobe-icon-dark.svg"
        }
      ]
    },
    "views": {
      "demoBuilder": [
        {
          "id": "demoBuilder.components",
          "name": "Components"
        }
      ]
    },
    "commands": [
      {
        "command": "demoBuilder.createProject",
        "title": "Create Project",
        "category": "Demo Builder"
      },
      {
        "command": "demoBuilder.checkForUpdates",
        "title": "Check for Updates",
        "category": "Demo Builder"
      },
      {
        "command": "demoBuilder.resetAll",
        "title": "Reset All (Dev Only)",
        "category": "Demo Builder"
      },
      {
        "command": "demoBuilder.showWelcome",
        "title": "Show Welcome Screen",
        "category": "Demo Builder",
        "icon": "$(home)"
      },
      {
        "command": "demoBuilder.showProjectDashboard",
        "title": "Open Project Dashboard",
        "category": "Demo Builder",
        "icon": "$(dashboard)"
      },
      {
        "command": "demoBuilder.switchProject",
        "title": "Switch Project",
        "category": "Demo Builder",
        "icon": "$(folder-opened)"
      }
    ]
  },
  "scripts": {
    "compile": "npm run compile:typescript && npm run compile:webview && npm run copy:media",
    "compile:typescript": "tsc -p ./",
    "compile:webview": "webpack --mode production",
    "copy:media": "mkdir -p dist/media && cp -r media/* dist/media/",
    "watch": "tsc -watch -p ./",
    "watch:webview": "webpack --mode development --watch",
    "watch:all": "npm run watch & npm run watch:webview",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src/**/*.ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish",
    "encrypt-keys": "node scripts/encrypt-keys.js",
    "manage-keys": "node scripts/manage-keys.js",
    "setup": "npm install && npm run compile",
    "postinstall": "npm run compile",
    "mesh:delete": "aio api-mesh delete --autoConfirmAction",
    "mesh:status": "aio api-mesh get --active",
    "hooks": "node scripts/hooks.js",
    "docs:check": "node scripts/hooks.js coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/semver": "^7.5.8",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.15.0",
    "html-webpack-plugin": "^5.6.4",
    "process": "^0.11.10",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@adobe/aio-lib-console": "^5.4.2",
    "@adobe/aio-lib-ims": "^7.0.2",
    "@adobe/react-spectrum": "^3.44.0",
    "@types/uuid": "^10.0.0",
    "axios": "^1.6.0",
    "crypto-js": "^4.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "semver": "^7.5.4",
    "uuid": "^13.0.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "yaml": "^2.3.4"
  }
}
