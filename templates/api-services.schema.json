{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "API Services Configuration",
  "description": "Configuration for Adobe API service detection and metadata",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "services": {
      "type": "object",
      "description": "Map of service configurations",
      "patternProperties": {
        "^[a-zA-Z0-9]+$": {
          "type": "object",
          "properties": {
            "displayName": {
              "type": "string",
              "description": "Human-readable service name"
            },
            "detection": {
              "type": "object",
              "description": "Service detection configuration",
              "properties": {
                "namePatterns": {
                  "type": "array",
                  "description": "Partial match patterns for service name field",
                  "items": {
                    "type": "string"
                  }
                },
                "codes": {
                  "type": "array",
                  "description": "Exact match patterns for service code field",
                  "items": {
                    "type": "string"
                  }
                },
                "codeNames": {
                  "type": "array",
                  "description": "Exact match patterns for service code_name field",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": ["namePatterns"]
            },
            "description": {
              "type": "string",
              "description": "Service description"
            },
            "setupInstructions": {
              "type": "array",
              "description": "Step-by-step setup instructions for manual API configuration",
              "items": {
                "type": "object",
                "properties": {
                  "step": {
                    "type": "string",
                    "description": "The instruction step title"
                  },
                  "details": {
                    "type": "string",
                    "description": "Detailed explanation of the step (supports {{VARIABLE}} placeholders)"
                  },
                  "important": {
                    "type": "boolean",
                    "description": "Whether this step is particularly important (highlighted in UI)"
                  },
                  "dynamicValues": {
                    "type": "object",
                    "description": "Dynamic value substitutions for placeholders in details",
                    "patternProperties": {
                      "^[A-Z_]+$": {
                        "type": "object",
                        "properties": {
                          "source": {
                            "type": "string",
                            "enum": ["selectedComponents", "configuration", "static"],
                            "description": "Where to get the value from"
                          },
                          "filter": {
                            "type": "string",
                            "description": "Optional filter (e.g., 'frontends', 'backends')"
                          },
                          "format": {
                            "type": "string",
                            "description": "Format string with {{field}} placeholders"
                          }
                        },
                        "required": ["source"]
                      }
                    }
                  }
                },
                "required": ["step", "details"]
              }
            }
          },
          "required": ["displayName", "detection"]
        }
      }
    }
  },
  "required": ["services"]
}

