{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Demo Builder Brands Schema",
  "description": "Schema for defining brands (content/vertical configurations) that can be combined with any stack",
  "type": "object",
  "required": ["version", "brands"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version (e.g., '1.0.0')"
    },
    "brands": {
      "type": "array",
      "description": "Array of available brands",
      "items": {
        "$ref": "#/definitions/brand"
      },
      "minItems": 1
    }
  },
  "definitions": {
    "brand": {
      "type": "object",
      "required": ["id", "name", "description", "configDefaults"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9-]*$",
          "description": "Unique identifier for the brand (lowercase, hyphen-separated)"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Display name for the brand"
        },
        "description": {
          "type": "string",
          "description": "Description of the brand"
        },
        "icon": {
          "type": "string",
          "description": "Icon identifier for the brand"
        },
        "featured": {
          "type": "boolean",
          "description": "Whether this brand should be featured in the UI"
        },
        "configDefaults": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Default configuration values for this brand (env var name to value)"
        },
        "contentSources": {
          "type": "object",
          "description": "Content sources by stack type",
          "properties": {
            "eds": {
              "type": "string",
              "description": "DA.live content source URL for Edge Delivery Services"
            }
          }
        }
      }
    }
  }
}
