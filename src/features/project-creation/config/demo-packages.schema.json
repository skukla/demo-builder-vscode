{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Demo Builder Demo Packages Schema",
  "description": "Schema for defining demo packages with nested storefronts by stack type",
  "type": "object",
  "required": ["version", "packages"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version (e.g., '1.0.0')"
    },
    "packages": {
      "type": "array",
      "description": "Array of demo packages (e.g., citisignal, buildright)",
      "items": {
        "$ref": "#/definitions/package"
      },
      "minItems": 1
    }
  },
  "definitions": {
    "package": {
      "type": "object",
      "required": ["id", "name", "description", "configDefaults", "storefronts"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9-]*$",
          "description": "Unique identifier for the package (lowercase, hyphen-separated)"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Display name for the package"
        },
        "description": {
          "type": "string",
          "description": "Description of the package"
        },
        "icon": {
          "type": "string",
          "description": "Icon identifier for the package"
        },
        "featured": {
          "type": "boolean",
          "description": "Whether this package should be featured in the UI"
        },
        "addons": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "enum": ["required", "optional"]
          },
          "description": "Addon requirements (addon ID to requirement level)"
        },
        "configDefaults": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Default configuration values for this package (env var name to value)"
        },
        "storefronts": {
          "type": "object",
          "description": "Storefront configurations keyed by stack ID (can be empty for placeholder packages)",
          "additionalProperties": {
            "$ref": "#/definitions/storefront"
          }
        }
      }
    },
    "storefront": {
      "type": "object",
      "required": ["name", "description", "source"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Display name for this storefront variant"
        },
        "description": {
          "type": "string",
          "description": "Description of what this storefront includes"
        },
        "icon": {
          "type": "string",
          "description": "Icon identifier for the storefront"
        },
        "featured": {
          "type": "boolean",
          "description": "Whether this storefront should be featured"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Tags for filtering and categorization"
        },
        "source": {
          "$ref": "#/definitions/gitSource"
        },
        "submodules": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/submodule"
          },
          "description": "Git submodules to include in the project"
        }
      }
    },
    "gitSource": {
      "type": "object",
      "required": ["type", "url", "branch", "gitOptions"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["git"],
          "description": "Source type (currently only git is supported)"
        },
        "url": {
          "type": "string",
          "pattern": "^https://",
          "description": "Git repository URL"
        },
        "branch": {
          "type": "string",
          "minLength": 1,
          "description": "Default branch to clone"
        },
        "gitOptions": {
          "type": "object",
          "required": ["shallow", "recursive"],
          "properties": {
            "shallow": {
              "type": "boolean",
              "description": "Whether to use shallow clone"
            },
            "recursive": {
              "type": "boolean",
              "description": "Whether to clone submodules recursively"
            }
          }
        }
      }
    },
    "submodule": {
      "type": "object",
      "required": ["path", "repository"],
      "properties": {
        "path": {
          "type": "string",
          "description": "Path within project where submodule should be placed"
        },
        "repository": {
          "type": "string",
          "description": "GitHub repository in 'owner/repo' format"
        }
      }
    }
  }
}
